            const container = document.getElementById('history-container');
            if (history.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-24 bg-slate-50 rounded-[3rem] border-2 border-dashed border-slate-100">
                        <p class="text-slate-300 font-black italic">Ù„Ø§ ÙŠÙˆØ¬Ø¯ Ø³Ø¬Ù„ Ù…Ø´Ø§Ø±ÙƒØ§Øª Ø­Ø§Ù„ÙŠ</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = history.map(item => `
                <div class="bg-white p-6 rounded-[2.5rem] border border-slate-100 shadow-sm flex items-center justify-between group hover:border-amber-200 transition-all">
                    <div class="flex items-center gap-4">
                        <div class="w-14 h-14 bg-amber-50 rounded-2xl flex items-center justify-center text-amber-500">
                            <i class="fas fa-clock text-2xl"></i>
                        </div>
                        <div>
                            <h4 class="font-black text-slate-800 text-lg">Ù…Ø³Ø§Ø¨Ù‚Ø© ${item.type}</h4>
                            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">${item.value}</p>
                        </div>
                    </div>
                    <div class="text-left">
                        <span class="text-[11px] font-black px-4 py-1 rounded-full bg-slate-50 text-slate-400 uppercase tracking-tighter">
                            ${item.status}
                        </span>
                        <p class="text-[9px] text-amber-500 font-bold mt-1 tracking-widest">${item.authCode}</p>
                    </div>
                </div>
            `).join('');
        }
    </script>
</body>
</html>
